<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ParkingLKS" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bluePrototype</item>
        <item name="colorPrimaryVariant">@color/greyPrototype</item>
        <item name="colorOnPrimary">@color/whitePrototype</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/redPrototype</item>
        <item name="colorSecondaryVariant">@color/greyPrototype</item>
        <item name="colorOnSecondary">@color/blackPrototype</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorHint">@color/greyPrototype</item>
    </style>

    <style name="Theme.ParkingLKS.TextInputLayout">
        <item name="android:textColorHint">@color/bluePrototype</item>
        <item name="hintTextColor">@color/greyPrototype</item>
    </style>

</resources>