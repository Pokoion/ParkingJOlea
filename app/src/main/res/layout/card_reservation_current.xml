<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewRide1"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        app:cardBackgroundColor="@color/colorBackground"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/ReservationTypeTextRide1"
                android:layout_width="80dp"
                android:layout_height="22dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Standard"
                android:textSize="16sp"
                android:textStyle="bold|italic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/PlaceTextRide1"
                android:layout_width="73dp"
                android:layout_height="19dp"
                android:layout_marginTop="24dp"
                android:text="Spot A-13"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/ReservationTypeTextRide1"
                app:layout_constraintTop_toBottomOf="@+id/ReservationTypeTextRide1" />

            <TextView
                android:id="@+id/DateTextRide1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="09/05/2025,  08:00 - 14:00"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/ReservationTypeTextRide1"
                app:layout_constraintTop_toBottomOf="@+id/PlaceTextRide1" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="30dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_car"
                app:layout_constraintStart_toEndOf="@+id/ReservationTypeTextRide1"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/colorHint" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>